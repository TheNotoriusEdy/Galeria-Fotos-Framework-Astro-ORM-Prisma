---
// src/components/LoginAnimadoConFotos.astro
import { ViewTransitions } from 'astro:transitions';
---

<head>
  <ViewTransitions />
</head>

<body class="bg-[#030712] font-sans antialiased">
    <div class="relative min-h-screen flex items-center justify-center overflow-hidden p-4 md:p-6">
        
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-[10%] -left-[10%] w-[40%] h-[40%] bg-purple-600/10 rounded-full blur-[120px] animate-pulse"></div>
            <div class="absolute bottom-[10%] right-[0%] w-[35%] h-[35%] bg-blue-600/10 rounded-full blur-[120px] animate-bounce [animation-duration:8s]"></div>
        </div>

        <main class="relative z-10 max-w-5xl w-full grid lg:grid-cols-2 bg-white/[0.02] backdrop-blur-2xl rounded-[2.5rem] border border-white/10 shadow-2xl overflow-hidden animate-in fade-in zoom-in duration-700">
            
            <div class="p-8 md:p-14 lg:p-16">
                <div class="animate-in slide-in-from-bottom-4 duration-1000 delay-150 fill-mode-both">
                    <h1 class="text-white text-4xl font-light tracking-tight mb-2">Bienvenido</h1>
                    <p class="text-slate-400 mb-10 text-lg">Accede a tu colección privada.</p>
                </div>

                <form class="space-y-5 animate-in slide-in-from-bottom-6 duration-1000 delay-300 fill-mode-both">
                    <div class="group">
                        <label class="block text-slate-400 text-xs uppercase tracking-[0.2em] mb-2 px-1">Correo Electrónico</label>
                        <input 
                            type="email" 
                            required
                            class="w-full bg-white/5 border border-white/10 rounded-2xl px-5 py-4 text-white outline-none group-focus-within:border-purple-500/50 group-focus-within:ring-4 group-focus-within:ring-purple-500/10 transition-all duration-300 placeholder:text-slate-600"
                            placeholder="nombre@ejemplo.com"
                        />
                    </div>

                    <div class="group">
                        <label class="block text-slate-400 text-xs uppercase tracking-[0.2em] mb-2 px-1">Contraseña</label>
                        <input 
                            type="password" 
                            required
                            class="w-full bg-white/5 border border-white/10 rounded-2xl px-5 py-4 text-white outline-none group-focus-within:border-blue-500/50 group-focus-within:ring-4 group-focus-within:ring-blue-500/10 transition-all duration-300 placeholder:text-slate-600"
                            placeholder="••••••••"
                        />
                    </div>

                    <a
                        href="/dashboard"
                    class="relative w-full group overflow-hidden bg-white text-black font-bold py-4 rounded-2xl transition-all duration-300 hover:scale-[1.01] active:scale-95 shadow-lg shadow-white/5"
                        >
                        <span class="relative z-10">Entrar ahora</span>
                        <div class="absolute inset-0 bg-gradient-to-r from-purple-400 to-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </a>
                </form>
            </div>

            <div class="hidden lg:flex relative bg-gradient-to-br from-white/[0.01] to-transparent items-center justify-center p-12 border-l border-white/5 overflow-hidden">
                
                <div class="relative animate-in fade-in duration-1000 delay-700">
                    <div class="grid grid-cols-2 gap-4 animate-float">
                        <div class="w-32 h-48 overflow-hidden rounded-2xl rotate-6 shadow-2xl border border-white/20 transform hover:scale-110 transition-transform duration-500">
                            <img src="https://picsum.photos/seed/img1/300/500" class="w-full h-full object-cover" alt="Art 1" />
                        </div>
                        <div class="w-32 h-48 overflow-hidden rounded-2xl -rotate-12 shadow-2xl border border-white/20 mt-12 transform hover:scale-110 transition-transform duration-500">
                            <img src="https://picsum.photos/seed/img2/300/500" class="w-full h-full object-cover" alt="Art 2" />
                        </div>
                        <div class="w-64 h-40 overflow-hidden rounded-2xl rotate-2 shadow-2xl border border-white/20 col-span-2 -mt-4 transform hover:scale-105 transition-transform duration-500">
                            <img src="https://picsum.photos/seed/img3/600/400" class="w-full h-full object-cover" alt="Art 3" />
                        </div>
                    </div>

                    <div class="absolute inset-0 flex items-center justify-center pointer-events-none -z-10">
                        <span class="text-[120px] font-black text-white/[0.03] italic tracking-tighter select-none">ART</span>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>

<style>
    /* Animación de flotación suave */
    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-25px) rotate(2deg); }
    }
    .animate-float {
        animation: float 8s ease-in-out infinite;
    }

    /* Mejora de scroll y selección */
    ::selection {
        background-color: rgba(168, 85, 247, 0.4);
        color: white;
    }
</style>