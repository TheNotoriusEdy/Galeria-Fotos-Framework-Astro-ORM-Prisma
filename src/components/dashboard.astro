        <button class="w-full bg-white text-black text-xs font-bold py-2.5 rounded-xl hover:bg-slate-200 transition-colors">Upgrade</button>
    </div>
  </aside>

  <main class="flex-1 p-6 md:p-10 overflow-y-auto">
    
    <header class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12">
      <div>
        <h2 class="text-3xl font-light">Hola, <span class="font-bold">Creativo</span> ðŸ‘‹</h2>
        <p class="text-slate-500 mt-1">Hoy tienes 24 nuevas fotos para revisar.</p>
      </div>
      
      <div class="flex items-center gap-4">
        <div class="relative group">
            <input type="text" placeholder="Buscar inspiraciÃ³n..." class="bg-white/5 border border-white/10 rounded-2xl px-6 py-3 w-64 md:w-80 outline-none focus:border-purple-500/50 transition-all backdrop-blur-md"/>
        </div>
        <button class="bg-purple-600 hover:bg-purple-500 px-6 py-3 rounded-2xl font-bold transition-all shadow-lg shadow-purple-600/20 active:scale-95 text-sm">
          + Subir
        </button>
      </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        {[
            { label: "Fotos", value: "1,205" },
            { label: "Ãlbumes", value: "12" },
            { label: "Espacio", value: "85%" }
        ].map(stat => (
            <div class="bg-white/[0.03] border border-white/5 p-6 rounded-[2.5rem] hover:bg-white/[0.05] transition-all">
                <p class="text-slate-500 text-sm">{stat.label}</p>
                <p class="text-3xl font-bold mt-1 tracking-tighter">{stat.value}</p>
            </div>
        ))}
    </div>

    <div class="flex gap-3 mb-8 overflow-x-auto pb-4 no-scrollbar">
        {["Todos", "Naturaleza", "Arquitectura", "Minimal", "Retratos"].map((cat, i) => (
            <button class={`px-6 py-2 rounded-full text-sm font-medium transition-all whitespace-nowrap ${i === 0 ? 'bg-white text-black' : 'bg-white/5 text-slate-400 hover:bg-white/10'}`}>
                {cat}
            </button>
        ))}
    </div>

    <div class="columns-1 sm:columns-2 lg:columns-3 xl:columns-4 gap-6 space-y-6">
        {[1,2,3,4,5,6,7,8].map(i => (
            <div class="relative group break-inside-avoid rounded-[2rem] overflow-hidden border border-white/10 cursor-pointer">
                <img 
                    src={`https://picsum.photos/seed/${i + 20}/400/${i % 2 === 0 ? '600' : '400'}`} 
                    class="w-full grayscale group-hover:grayscale-0 group-hover:scale-110 transition-all duration-700 ease-out"
                    alt="Imagen de galerÃ­a"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex flex-col justify-end p-8">
                    <p class="text-white font-bold text-lg translate-y-4 group-hover:translate-y-0 transition-transform duration-500">Obra Visual #{i}</p>
                    <p class="text-slate-300 text-sm translate-y-4 group-hover:translate-y-0 transition-transform duration-500 delay-75">CategorÃ­a Premium</p>
                    <div class="flex gap-3 mt-4 translate-y-4 group-hover:translate-y-0 transition-transform duration-500 delay-150">
                        <button class="w-10 h-10 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center hover:bg-white/40 transition-colors text-xl">â™¥</button>
                        <button class="w-10 h-10 bg-white/20 backdrop-blur-md rounded-full flex items-center justify-center hover:bg-white/40 transition-colors text-xl">â¤¢</button>
                    </div>
                </div>
            </div>
        ))}
    </div>
  </main>
</div>

<style>
    .no-scrollbar::-webkit-scrollbar { display: none; }
    .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }
</style>
