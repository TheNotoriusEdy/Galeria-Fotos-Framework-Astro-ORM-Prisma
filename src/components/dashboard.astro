---

<ViewTransitions />
<div class="flex min-h-screen bg-[#030712] text-white">
  
  <aside class="hidden md:flex w-72 border-r border-white/5 bg-white/[0.01] backdrop-blur-3xl flex-col p-8">
    <div class="flex items-center gap-3 mb-12">
      <div class="w-10 h-10 bg-gradient-to-tr from-purple-500 to-blue-500 rounded-xl shadow-lg shadow-purple-500/20"></div>
      <span class="text-xl font-bold tracking-tight">VibeGallery</span>
    </div>

    <nav class="space-y-6 flex-1">
      <div class="space-y-1">
        <p class="text-[10px] uppercase tracking-[0.2em] text-slate-500 font-bold mb-4">MenÃº</p>
        {["Explorar", "Recientes", "Favoritos", "Papelera"].map(item => (
          <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-xl hover:bg-white/5 transition-all text-slate-400 hover:text-white group">
            <div class="w-1.5 h-1.5 rounded-full bg-purple-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>
            {item}
          </a>
        ))}
      </div>
    </nav>

    <div class="bg-gradient-to-br from-purple-900/40 to-blue-900/40 p-6 rounded-[2rem] border border-white/10">
